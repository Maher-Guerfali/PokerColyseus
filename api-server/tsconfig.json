{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "."
    ],
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
